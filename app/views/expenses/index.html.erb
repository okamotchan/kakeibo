<h4>あなたの家計簿</h4>
<% if @expenses.present? %>
<table>
  <thead>
    <tr>
      <th>買ったもの</th>
      <th>金額</th>
    </tr>
  </thead>
  <tbody>
		<% @expenses.each do |expense| %>
			<tr>
				<td><%= expense.name %></td>
				<td><%= expense.price %></td>
				<td>
				<%= link_to "編集", [:edit, expense] %>
				<%= link_to "削除", expense, method: :delete,
					data: { confirm: "本当に削除しますか？"} %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<% else %>
  <p>何も記録されていません</p>
<% end %>

<p class="waves-effect waves-light btn-small white center-align"><%= link_to "記録する", :new_expense %></p>
